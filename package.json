{
	"name": "@template-app/template-app",
	"version": "0.0.1",
	"devDependencies": {
		"@fundamend/config-eslint": "^0.1.1",
		"@fundamend/config-lint-staged": "^0.1.1",
		"@fundamend/config-prettier": "^0.1.1",
		"@fundamend/config-remark": "^0.1.1",
		"@fundamend/config-standard-version": "^0.1.1",
		"conventional-github-releaser": "3.1.3",
		"cross-env": "^7.0.3",
		"eslint": "^8.2.0",
		"lerna": "^6.0.3",
		"lint-staged": "^12.1.2",
		"madge": "^5.0.1",
		"prettier": "^2.7.1",
		"remark-cli": "^10.0.0",
		"rimraf": "^3.0.2"
	},
	"license": "MIT",
	"private": true,
	"scripts": {
		"clean": "lerna run clean && rimraf *.log",
		"clean:all": "lerna run clean:all && yarn clean && rimraf node_modules",
		"graph": "madge --image graph.png packages/drivers",
		"lint": "yarn lint:js && yarn lint:md && yarn lint:formatting",
		"lint:fix": "yarn lint:js:fix && yarn lint:md:fix && yarn lint:formatting:fix",
		"lint:formatting": "prettier . --check",
		"lint:formatting:fix": "prettier . --write",
		"lint:js": "eslint .",
		"lint:js:fix": "eslint . --fix",
		"lint:md": "remark . --ignore-path .gitignore",
		"lint:md:fix": "remark . --ignore-path .gitignore --output",
		"precommit": "lint-staged",
		"prod": "lerna run prod",
		"release:prepare": "cross-env-shell \"standard-version -t $npm_package_name@\"",
		"test": "lerna run test --concurrency 1",
		"test:behavior": "lerna run test:behavior --concurrency 1",
		"test:unit": "lerna run test:unit --concurrency 1"
	},
	"type": "module",
	"workspaces": [
		"packages/**"
	]
}
