{
	"name": "@template-app/worker-test",
	"version": "0.0.0",
	"dependencies": {
		"@fundamend/service-crash-sentry": "^0.0.0"
	},
	"devDependencies": {
		"@cucumber/cucumber": "^8.8.0",
		"@fundamend/config-eslint": "^0.1.1",
		"@fundamend/config-lint-staged": "^0.1.1",
		"@fundamend/config-prettier": "^0.1.1",
		"@fundamend/config-remark": "^0.1.1",
		"@fundamend/config-standard-version": "^0.1.1",
		"@fundamend/config-vitest": "0.0.0",
		"@size-limit/preset-app": "^8.1.2",
		"concurrently": "^7.2.2",
		"conventional-github-releaser": "3.1.3",
		"cross-env": "^7.0.3",
		"eslint": "^8.2.0",
		"lerna": "^6.0.3",
		"lint-staged": "^12.1.2",
		"madge": "^5.0.1",
		"prettier": "^2.7.1",
		"remark-cli": "^10.0.0",
		"rimraf": "^3.0.2",
		"size-limit": "^8.1.2",
		"vitest": "^0.25.3",
		"wait-on": "^6.0.1",
		"wrangler": "^2.9.1"
	},
	"license": "MIT",
	"main": "src/index.js",
	"scripts": {
		"clean": "rimraf build *.log",
		"clean:all": "yarn clean && rimraf node_modules",
		"dev": "wrangler dev",
		"graph": "madge --image graph.png src",
		"lint": "yarn lint:js && yarn lint:md && yarn lint:formatting",
		"lint:fix": "yarn lint:js:fix && yarn lint:md:fix && yarn lint:formatting:fix",
		"lint:formatting": "prettier . --check",
		"lint:formatting:fix": "prettier . --write",
		"lint:js": "eslint .",
		"lint:js:fix": "eslint . --fix",
		"lint:md": "remark . --ignore-path .gitignore",
		"lint:md:fix": "remark . --ignore-path .gitignore --output",
		"precommit": "lint-staged",
		"prod": "wrangler publish",
		"prod:preview": "wrangler publish --dry-run --outdir ./build",
		"release:prepare": "cross-env-shell \"standard-version -t $npm_package_name@\"",
		"size": "yarn prod:preview && size-limit",
		"size:why": "yarn prod && size-limit --why",
		"test": "yarn test:unit && yarn test:behavior",
		"test:behavior": "concurrently --names wrangler,cucumberjs --prefix name --prefix-colors yellow,green --success first --kill-others \"yarn dev\" \"wait-on http://localhost:8787 && cucumber-js\"",
		"test:unit": "concurrently --names wrangler,vitest --prefix name --prefix-colors yellow,green --success first --kill-others \"yarn dev\" \"wait-on http://localhost:8787 && vitest --run --config vitestrc.js\""
	},
	"size-limit": [
		{
			"limit": "1 s",
			"path": "build/**/*.js"
		}
	],
	"type": "module"
}
